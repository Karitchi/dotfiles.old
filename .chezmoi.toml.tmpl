{{- $email := promptStringOnce . "email" "Email address" -}}
{{- $username := promptStringOnce . "username" "Username" -}}
{{- $textEditor := promptStringOnce . "textEditor" "Text editor" -}}

[edit]
	command = {{ $textEditor | quote }}

[git]
	autoCommit = true
	autoPush = true

[data]
	email = {{ $email | quote}}
	username = {{ $username | quote }}
	textEditor = {{ $textEditor | quote }}
